<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    >

    <TextView
        android:id="@+id/name_procedures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="teeth procedure"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/opensans_bold"
        android:textSize="16dp"
        android:layout_marginStart="12dp"

        android:layout_toEndOf="@+id/person_image"/>
    <TextView
        android:id="@+id/price_procedures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EGP 200"
        android:fontFamily="@font/opensans_regular"
        android:textSize="14dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/name_procedures"
        android:layout_toEndOf="@+id/person_image"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24_bink"
        android:layout_toStartOf="@+id/person_message"
        android:layout_marginEnd="12dp"
        android:padding="12dp"/>

    <ImageView
        android:id="@+id/person_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete_24_bink"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:padding="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#38000000"
        android:layout_below="@+id/price_procedures"
        android:layout_marginTop="12dp"/>

</RelativeLayout>